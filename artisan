{
    showMenu(false);
}

if ($action == 'make:migration')
{
    if (count($argv)==0) {
        $migration = text("What should the migration be named?", "E.g. create_flights_table", "", "The name is required.");
    } else {
        $migration = $argv[0];
    }

    makeMigration($migration);
}

elseif ($action == 'migrate')
{
    if (migrate()==0) {
        Artisan::info("Nothing to migrate.");
    }
}

elseif ($action == 'migrate:rollback')
{
    $last = DB::table('migrations')->toBase()->get()->pluck('migration')->last();

    if ($last) {
        rollback($last);
    } else {
        Artisan::info("Nothing to rollback.");
    }
}

elseif ($action == 'make:controller')
{
    $controller = null;
    $model = null;
    $resource = false;
    $singleton = false;
    $invokable = false;
    $api = false;
    $type = false;

    if (count($argv)==0) {
        $controller = text("What should the controller be named?", "E.g. UserController", '', "The name is required.");
        //die("CONTRILLER: $controller\n");
    } else {
        $controller = $argv[0];
    }

    foreach ($argv as $arg)
    {
        if (strpos($arg, '-model=')==1) {
            $model = str_replace('--model=', '', $arg);
        }

        elseif ($arg=='--resource') {
            $type = true;
            $resource = true;
        }

        elseif ($arg=='--singleton') {
            $type = true;
            $singleton = true;
        }

        elseif ($arg=='--invokable') {
            $type = true;
            $invokable = true;
        }

        elseif ($arg=='--api') {
            $type = true;
            $api = true;
            $resource = true;
        }
    }

    if (!$type) {
        $type = select("Which type of controller would you like?",
                array('Empty', 'Resource', 'Singleton', 'API', 'Invokable')
            );

        if ($type=="Resource") { $resource = true; }
        if ($type=="Singleton") { $singleton = true; }
        if ($type=="API") { $resource = true; $api = true; }
        if ($type=="Invokable") { $invokable = true; }
    }

    if (file_exists('app/http/controllers/'.$controller.'.php')) {
        Artisan::error("Controller [$controller] already exists.");
        die();
    }

    makeController($controller, $resource, $api, $singleton, $invokable);

    if (isset($model) && !file_exists('app/models/'.ucfirst($model).'.php'))
    {
        makeModel(ucfirst($model));
    }
}

elseif ($action == 'make:policy')
{
    if (count($argv)==0) {
        $policy = text("What should the policy be named?", "E.g. PostPolicy", "", "The name is required.");
    } else {
        $policy = $argv[0];
    }
    
    if (file_exists('app/policies/'.$policy.'.php')) {
        Artisan::error("Policy [$policy] already exists.");
        die();
    }

    makePolicy($policy);
}

elseif ($action == 'make:model')
{
    $model = null;
    $controller = false;
    $resource = false;
    $migration = false;
    $policy = false;

    if (count($argv)==0) {
        $model = text("What should the model be named?", "E.g. Flight", "", "The name is required.");

        $types = multiselect("Would you like any of the following?",
                array('Migration', 'Policy', 'Resource Controller')
            );

        if (in_array("Migration", $types)) { $migration = true; }
        if (in_array("Policy", $types)) { $policy = true; }
        if (in_array("Resource Controller", $types)) { $controller = true; $resource = true; }
    }

    foreach ($argv as $arg)
    {
        if ($arg=='--controller') $controller = true;
        elseif ($arg=='--migration') $migration = true;
        elseif ($arg=='--resource') $resource = true;
        elseif ($arg=='--policy') $policy = true;
        elseif (substr($arg, 0, 1)=='-' && strlen($arg)>1)
        {
            foreach (str_split(str_replace('_', '', $arg)) as $a)
            {
                if ($a == 'm') $migration = true;
                elseif ($a == 'r') $resource = true;
                elseif ($a == 'c') $controller = true;
                elseif ($a == 'a') { $controller=true; $resource=true; $migration=true; }
            }
        }
        else $model = ucfirst($arg);
    }

    if (file_exists('app/models/'.$model.'.php')) {
        Artisan::error("Model [$model] already exists.");
        die();
    }
        
    $model = ucfirst(strtolower($model));

    makeModel($model);

    /* $config = new Config;
    $config->boot(); */
    CoreLoader::loadClass(_DIR_.'app/providers/RouteServiceProvider.php', true);

    if (!file_exists('app/http/controllers/'.$model.'Controller.php') && $controller) {
        echo "\r\033[K\033[1A\r\033[K\r";
        makeController($model.'Controller', $resource);        
    }

    if (!file_exists('app/policies/'.$model.'Policy.php') && $policy) {
        echo "\r\033[K\033[1A\r\033[K\r";
        makePolicy($model.'Policy');        
    }

    if ($migration) {
        $table = Helpers::getPlural($model, true);
        $arg = 'create_'.strtolower($table).'_table';

        echo "\r\033[K\033[1A\r\033[K\r";
        makeMigration($arg);
    }
}

