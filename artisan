elseif ($action == 'make:view')
{
    if (count($argv)==0) {
        $view = text("What should the view be named?", "E.g. Post", "", "The name is required.");
    } else {
        $view = $argv[0];
    }

    $view = 'resources/views/' . str_replace('.', '/', $view);

    $pathinfo = pathinfo($view);
    $path = str_replace(base_path($view), $pathinfo['filename'], $view);

    if (!is_dir($pathinfo['dirname'])) {
        mkdir($pathinfo['dirname'], 0755, true);
    }

    if (file_exists($path.'.blade.php')) {
        Artisan::error("View [$view] already exists.");
        die();
    }

    $class = getStub('view');

    $inspiring = Inspiring::quotes()->random();

    $class = str_replace('{{ inspiring }}', $inspiring, $class);

    file_put_contents($path.'.blade.php', $class);

    Artisan::info("View [$view.blade.php] created successfully.");

}

