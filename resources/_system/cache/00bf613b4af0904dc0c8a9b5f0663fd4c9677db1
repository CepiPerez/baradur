    <main>
      
      <nav class="navbar justify-content-lg-between">
        <li class="navbar-brand text-white"><?php echo ($app_name); ?></li>
        <?php if( Route::has('login') ): ?>
        <div class="row mr-2">
            <?php if( Auth::user() ): ?>
            <span class="nav-item">
              <?php echo (Auth::user()->name); ?>

            </span>
            <span class="nav-btn">
              <a href="<?php echo (route('logout')); ?>" class="text-white nav-link">
              <i class="fa fa-sign-out-alt" aria-hidden="true"></i></a>
            </span>
            <?php else: ?>
            <span class="nav-btn">
              <a href="<?php echo (route('login')); ?>" class="text-white nav-link">
              <i class="fa fa-sign-in-alt mr-2" aria-hidden="true"></i><?php echo App::trans('login.login'); ?></a>
            </span>
            <?php endif; ?>
        </div>
        <?php endif; ?>
      </nav>

      <?php if($breadcrump): ?>
      <ol class="breadcrumb">
        <?php $__currentLoopData = $breadcrump; $this->addLoop($__currentLoopData); foreach($__currentLoopData as $key => $value): $this->incrementLoopIndices(); $loop = $this->getFirstLoop(); ?>
          <?php if($value == '#'): ?>
          <li class="breadcrumb-item"><?php echo ($key); ?></li>
          <?php else: ?>
          <li class="breadcrumb-item active"><a href="<?php echo ($value); ?>"><?php echo ($key); ?></a></li>
          <?php endif; ?>
        <?php endforeach; $this->popLoop(); $loop = $this->getFirstLoop(); ?>
      </ol>
      <?php endif; ?>

      <?php if( session('message') ): ?>
        <div class="container alert alert-success alert-dismissible" role="alert"><?php echo (session('message')); ?>

            <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
      <?php endif; ?>
      <?php if( session('error') ): ?>
      <div class="container alert alert-danger alert-dismissible" role="alert"><?php echo (session('error')); ?>

          <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
              <span aria-hidden="true">&times;</span>
          </button>
      </div>
      <?php endif; ?>
      <?php if( $errors->any() ): ?>
      <div class="container alert alert-danger alert-dismissible" role="alert">
          <?php $__currentLoopData = $errors->all(); $this->addLoop($__currentLoopData); foreach($__currentLoopData as $error): $this->incrementLoopIndices(); $loop = $this->getFirstLoop(); ?>
            <li><?php echo ($error); ?></li>
          <?php endforeach; $this->popLoop(); $loop = $this->getFirstLoop(); ?>
          <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
              <span aria-hidden="true">&times;</span>
          </button>
      </div>
      <?php endif; ?>

      <?php echo $this->yieldContent('content'); ?>
      

    </main>
    
