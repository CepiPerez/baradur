    <navbar class="custom-menu">
        <?php $__currentLoopData = $data; $this->addLoop($__currentLoopData); foreach($__currentLoopData as $key => $val): $this->incrementLoopIndices(); $loop = $this->getFirstLoop(); ?>
        <li class="menu"><a href="#"><?php echo ($key); ?></a>
            <ul class="submenu">
                <?php $__currentLoopData = $val; $this->addLoop($__currentLoopData); foreach($__currentLoopData as $value): $this->incrementLoopIndices(); $loop = $this->getFirstLoop(); ?>
                <li><a href="<?php echo ($value['url']); ?>"><?php echo ($value['titulo']); ?></a></li>
                <?php endforeach; $this->popLoop(); $loop = $this->getFirstLoop(); ?>
            </ul>
        </li>
        <?php endforeach; $this->popLoop(); $loop = $this->getFirstLoop(); ?>
    </navbar>

